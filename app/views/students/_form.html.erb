<% if @student.errors.any? %>
<ul>
  <% @student.errors.full_messages.each do |err| %>
  <li><%= err %></li>
  <% end %>
</ul>
<% end %>

<%= form_for @student do |f| %>
  <%= f.label "Student's name" %>
  <%= f.text_field :name %>
  <%= f.label "Photo URL" %>
  <%= f.text_field :img_url %>
  <%= f.submit %>
<% end %>
